---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {% for page in site.pages %}
    {% if page.sitemap != false %}
      <url>
        <loc>{{ site.url }}{{ page.url }}</loc>
        <lastmod>{{ page.last_modified_at | default: site.time | date_to_xmlschema }}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.5</priority>
      </url>
    {% endif %}
  {% endfor %}
  {% for post in site.posts %}
    {% assign slug = post.url | split: '/' | last %}
    {% assign game = slug | split: '-' | first %}
    {% assign filename = game | append: '.html' %}
    {% assign data_entry = site.data.include_files[filename] %}
    <url>
      <loc>{{ site.url }}{{ post.url }}</loc>
      <lastmod>{{ data_entry.last_modified | default: post.date | date_to_xmlschema }}</lastmod>
      <changefreq>daily</changefreq>
      <priority>0.8</priority>
    </url>
  {% endfor %}
</urlset>